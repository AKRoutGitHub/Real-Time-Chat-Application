generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  username  String
  room      String
  time      DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  room     String
  socketId String   @unique
}